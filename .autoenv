alias league-build='docker-compose --file localdev.docker-compose.yml build'
alias league-up='docker-compose --file localdev.docker-compose.yml up -d'
alias league-down='docker-compose --file localdev.docker-compose.yml down'
alias league-app-shell='docker-compose --file localdev.docker-compose.yml exec busterleague /bin/bash'
alias league-db-shell='docker-compose --file localdev.docker-compose.yml exec busterleaguedb /bin/bash'
alias league-logs='docker-compose --file localdev.docker-compose.yml logs'
alias league-railslog='docker-compose --file localdev.docker-compose.yml exec busterleague tail -f log/development.log'
alias league-app-console='docker-compose --file localdev.docker-compose.yml exec busterleague bundle exec rails console -e development'
alias league-app-restart='docker-compose --file localdev.docker-compose.yml exec busterleague touch tmp/restart.txt'

alias next-build='docker-compose --file localdev-next.docker-compose.yml build'
alias next-up='docker-compose --file localdev-next.docker-compose.yml up -d'
alias next-down='docker-compose --file localdev-next.docker-compose.yml down'
alias next-app-shell='docker-compose --file localdev-next.docker-compose.yml exec busterleague-next /bin/bash'
alias next-db-shell='docker-compose --file localdev-next.docker-compose.yml exec busterleaguedb-next /bin/bash'
alias next-logs='docker-compose --file localdev-next.docker-compose.yml logs'
alias next-railslog='docker-compose --file localdev-next.docker-compose.yml exec busterleague-next tail -f log/development.log'
alias next-app-console='docker-compose --file localdev-next.docker-compose.yml exec busterleague-next bundle exec rails console -e development'
alias next-app-restart='docker-compose --file localdev-next.docker-compose.yml exec busterleague-next touch tmp/restart.txt'
