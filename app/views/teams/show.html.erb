<% @page_title = "#{@team.name} - #{@season} Season" %>

<div class="page-header" id="overview">
  <h1>
    <%= inline_svg(@team.logo, size: "200px*200px") -%>
    <%= @page_title %>
    <small class="text-muted">(<%= link_to('all seasons',team_path(@team)) %>)</small>
  </h1>
</div>


  <div class="page-header">
    <h1>Season Stats</h1>
  </div>
  <div class="row">
    <div class="col-md-12">
      <table class="table table-sm table-bordered">
        <thead>
          <tr>
            <th>W-L</th>
            <th>PCT</th>
            <th>GB</th>
            <th>L10</th>
            <th>STRK</th>
            <th>RF</th>
            <th>RA</th>
            <th>X_PCT</th>
            <th>X_WL</th>
            <th>Home</th>
            <th>Road</th>
            <th>v.Hum</th>
            <th>v.Com</th>
            <th>v.Winners</th>
            <th>v.Losers</th>
          </tr>
        </thead>
        <tbody>
          <%- date_stat = DateStat.new(:date => @date, :team => @team, :season => @season)%>
          <tr>
            <td><%= display_wl([date_stat.wins,date_stat.losses]) %></td>
            <td><%= number_with_precision(date_stat.win_pct.to_f,:precision => 3)%></td>
            <td><%= display_gb(date_stat.gb) %></td>
            <td><%= date_stat.last_ten %></td>
            <td><%= date_stat.streak %></td>
            <td><%= date_stat.rf %></td>
            <td><%= date_stat.ra %></td>
            <td><%= number_with_precision(date_stat.expected_pct,:precision => 3)%></td>
            <td><%= display_wl(date_stat.expected_wl) %></td>
            <td><%= display_wl(date_stat.home_wl) %></td>
            <td><%= display_wl(date_stat.road_wl) %></td>
            <td><%= display_wl(date_stat.human_wl) %></td>
            <td><%= display_wl(date_stat.computer_wl) %></td>
            <td><%= display_wl(date_stat.winners_wl) %></td>
            <td><%= display_wl(date_stat.losers_wl) %></td>
          </tr>
        </tbody>
      </table>
    </div>




  </div>

  <div class="page-header">
    <h1>Roster</h1>
  </div>
  <div class="row">
    <div class="col-md-12">
      <table class="table table-sm table-bordered">
      <thead>
        <tr>
          <th>Name</th>
          <th>Position</th>
          <th>Age</th>
        </tr>
      </thead>
      <tbody>
          <%- @team.rosters.for_season(@season).includes(:player).each do |rp| %>
          <tr>
            <td><%= player_link(rp.player) -%></td>
            <td><%= rp.position -%></td>
            <td><%= rp.age -%></td>
          </tr>
          <%- end -%>
      </tbody>
      </table>
    </div>
  </div>


  <div class="page-header">
    <h1>Game Results</h1>
  </div>

  <div class="row">
    <div class="col-md-12">
    <table class="table table-bordered table-striped">
    <thead>
      <tr>
      <th>Date</th>
      <th>Opponent</th>
      <th>Win/Loss</th>
      <th>Score</th>
      <th>Innings</th>
      </tr>
    </thead>
    <tbody>
      <%- @team.games.for_season(@season).order("date DESC").each do |game| -%>
        <tr>
          <td><%= link_to(game.date.strftime("%b %d"), boxscore_path(game.boxscore))%></td>
          <td><%= (game.home? ? 'vs.' : '@')%> <%= link_to(game.opponent.name, team_path(game.opponent))%></td>
          <td><%= (game.win? ? 'W' : 'L')%></td>
          <td><%= display_score(game.score)%></td>
          <td><%= game.total_innings %></td>
        </tr>
      <%- end -%>
    </tbody>
  </table>
  </div>
</div>
