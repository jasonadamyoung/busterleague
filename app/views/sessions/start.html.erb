<%- @page_title = 'Log In'-%>



<div class="row">
        <div class="col-md-4"></div>

        <div class="col-md-4">
          <div class="page-header" id="overview">
            <h1><%= @page_title %></h1>
            <p>Enter your email address, and you'll be sent an email with a link to log in</p>
          </div>

          <div class="well">
              <%= form_tag(login_path, class: 'form-horitzontal') do -%>
              <div class="form-group">
              <div><%= email_field_tag('email', params[:email], {class: 'col-md-10', placeholder: 'Email'}) %></div>
            </div>

            <div class="form-group">

              <div>
                <%= button_tag('Send Login Email',{class: 'btn btn-primary'}) %>
              </div>
            </div>

              <%- end # form -%>
            </div>
        </div>

        <div class="col-md-4"></div>
</div>
