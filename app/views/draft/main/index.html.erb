<% @page_title = 'Busterleague' %>


<%- if @currentowner.is_admin? and !Settings.draftcomplete-%>
<div class="row">
  <div class="col-md-12">
    <h2>Draft Search</h2>
    <%= render(:partial => 'draftsearch') %>
  </div>
</div>
<%- end -%>


<div class="row">
  <div class="col-md-12">
    <h2>Recent Draft Picks</h2>
    <%- if DraftPick.recent.count >= 1 -%>
    <%= render(:partial => 'picktable', :locals => {:pickslist => DraftPick.recent })%>
    <%- else -%>
    <p>No draft picks yet.</p>
    <%- end -%>
  </div>
</div>
<%- if DraftPick.upcoming.count >= 1 -%>
<div class="row">
  <div class="col-md-12">
    <h2>Upcoming Draft Picks</h2>
    <%= render(:partial => 'unpicktable', :locals => {:pickslist => DraftPick.upcoming })%>
  </div>
</div>
<%- end -%>

<h2>Position Distributions</h2>
<div class="row">
      <div class="col-md-4">
        <div class="well">
          <h3>Currently Rostered</h3>
          <%= display_position_counts(Player.rostered.group('position').count)%>
          </div>
      </div>

      <div class="col-md-4">
        <div class="well">
          <h3>Left in Draft</h3>
          <%= display_position_counts(Player.notdrafted.group('position').count)%>
          </div>
      </div>

      <div class="col-md-4">
        <div class="well">
          <h3>Drafted</h3>
          <%= display_position_counts(Player.drafted.group('position').count)%>
          </div>
      </div>
</div>
