<% @page_title = "Batting Stats Distributions" %>
<div class="page-header">
  <h1>Batting Stats</h1>
</div>
<%- @batting_stats.each do |stat| -%>
<div class="row">
  <h2><%= stat.label %></h2>
  <div class='col-md-5'>  
    <%= render(:partial => 'distribution_chart', :locals => {:stat => stat}) %>
  </div>
  <div class='col-md-5'>  
    <%= render(:partial => 'scaled_distribution_chart', :locals => {:stat => stat}) %>
  </div>
  
</div>
<%- end -%>
  
