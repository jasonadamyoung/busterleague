<%= form_tag(wantplayer_player_path, :class => 'form-horizontal') do -%>
  <div class="form-group">
 	  <div class="col-md-4">
       <label class="control-label" for='notes'>Notes:</label>
     </div>
      <div class="col-md-4">
  			<%= text_area_tag(:notes, '') %>
		</div>
	</div>
  <div class="form-group">
 	  <div class="col-md-4">
       <label class="control-label" for='highlight'>Highlight:</label>
    </div>
     <div class="col-md-4">
			<%= text_field_tag(:highlight, 'ffff00', class: 'jscolor') %>
	  	<div id="colorpicker"></div>
		</div>
	</div>
		<%= submit_tag('Add',:class=>'btn btn-primary') %>
		<%= link_to('cancel', '#', :class=> 'btn', :id => 'playerwantcancel' ) %>
<%- end -%>
