<table class="table table-bordered table-condensed">
    <thead>
    <tr>
        <th>NAME</th>
        <th>POS</th>
        <th>TEAM</th>
        <th>RANKVALUE</th>
        <%- if @owner_rank -%>
        <th>OWNER RANK</th>
        <%- end -%>
        <%- @psp.column_list.each do |stat| %>
          <th><%= stat.upcase %></th>
        <%- end -%>
    </tr>
    </thead>

    <tbody>
    <% playerlist.each do |pitcher| %>
    <%- if !pitcher.team.blank?
          style = "class = 'teamed'"
        elsif @currentowner.wantedplayers.include?(pitcher)
          if(index =  @currentowner.wantedplayers.index(pitcher))
            wanted = @currentowner.wantedplayers[index]
            style = "style = 'background: ##{wanted.highlight}'"
          else
            style = "class = 'available'"
          end
        else
          style = "class = 'available'"
        end
    -%>
  	<tr <%= style.html_safe %>>
        <td><%= link_to("#{pitcher.fullname}", player_url(pitcher)) %></td>
        <td><%= link_to(pitcher.position, :controller => 'players', :action => 'index', :position => pitcher.position.downcase) %></td>
        <td><%= pitcher.team.nil? ? '' : pitcher.team.abbrev  %></td>
        <td><%= display_rankvalue(pitcher.rankvalue) %></td>
        <%- if @owner_rank -%>
          <td>
            <a href="#" class="owner_rank"
                        data-type="text"
                        data-resource="put"
                        data-name="owner_rank"
                        data-url="/players/<%= pitcher.id -%>/set_owner_rank"
                        data-original-title="Enter owner rank">
              <%= display_owner_rankvalue(pitcher.owner_rankvalue) -%>
            </a>
          </td>
        <%- end -%>
        <%- @psp.column_list.each do |stat| %>
          <%- if stat == 'lops' %>
          <td><%= ops_display(pitcher,'left')%></td>
          <%- elsif stat == 'rops' -%>
            <td><%= ops_display(pitcher,'right')%></td>
          <%- else -%>
            <td><%= pitcher.statline.send(stat) %></td>
          <%- end -%>
        <%- end -%>

      </tr>
    <% end %>
    </tbody>
</table>
