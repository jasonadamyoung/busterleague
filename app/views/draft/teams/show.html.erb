<% @page_title = "#{@team.name}" %>

<div class="page-header">
  <h1><%= @team.name %></h1>
</div>

<div class="row">
  <div class="col-md-12">
  <%= render(:partial => 'team_batters') %>
</div>
</div>
<div class="row">
  <div class="col-md-12">
  <%= render(:partial => 'team_pitchers') %>
</div>
</div>

<div class="row">
  <div class="col-md-12">
    <h2>Draft Picks</h2>
    <%= render(:partial => 'teampicktable', :locals => {:pickslist => @team.draft_picks.order('overallpick ASC')})%>
    </div>
</div>
